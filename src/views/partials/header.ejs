          <span class="navbar-toggler-icon"></span>
        </button>
        <form action="/" method="get" class="d-flex" role="search" id="formBuscadorHeader">
          <div class="input-group my-1">
            <span class="input-group-text p-1" style="width: 38px; height: 38px;"><a href="/"><img src="/img/logo/EliBaExpress-logo-E.png" alt="E" class="w-100"></a></span>

            <input type="search" class="form-control" placeholder="Buscar"  name="q" value="<%= locals.querySearch && querySearch || '' %>">
            <button class="btn btn-outline-success btn-sm" type="submit" id="btnBuscadorHeader">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
              </svg>
            </button>
          </div>
        </form>
       
        <div class="ms-5 navbar-collapse collapse" id="navbarMenu">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            
            <!-- <li class="vr d-none d-lg-block"></li> -->
            
            <% if(!locals.user){ %>
            <li class="nav-item">
              <button class="nav-link cursor-pointer" id="btnModalIngresar">Iniciar sesión</button>
            </li>
            <% } else { %>
              <!-- <li class=" d-none d-lg-block">|</li> -->
              <li class="nav-item">
                <a class="nav-link" href="/perfil">Prefil</a>
              </li>
              <li class=" d-none d-lg-block my-auto">-</li>
              <li class="nav-item">
                <a class="nav-link" href="/api/CerrarSesion">Cerrar sesión</a>
              </li>
              <% } %>
              <hr class="d-lg-none">
            <li class="vr d-none d-lg-block"></li>
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products">Nuestros productos</a>
            </li>
          </ul>
        
          <% if(locals.user && user.isAdmin){ %>
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0 text-end">
            
            <hr>
            <li class="nav-item">
              <a class="nav-link cursor-pointer " href="#" id="btnAbrirModalNewProduct">Nueva Publicación</a>
            </li>
            <%- include('./formNewProduct') %>

            
            <li class="nav-item">
              <a class="nav-link" href="/products/admin" target="_blank">Administrar Publicaciones </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products/admin/adminStockProducts" target="_blank">Administrar Stock Publicaciones </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/pedidos/admin" target="_blank">Administrar Pedidos </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" target="_blank" href="/admin/administrarUsuarios">Permisos</a>
            </li>
          </ul>
          <% } %>

        </div>
      </div>
    </nav>


    <nav class="text-end" style="position: fixed; top:90px;right: 10px; z-index: 10;">
      <section class="d-flex justify-content-end" >
  
        <div class="rounded-pill  p-1 m-1 iconoCarrito position-relative" >
          <a href="/pedidos/carrito" target="_blank" class="text-light ">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
